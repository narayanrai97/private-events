<h1>Upcoming Events (<%= @events.count %>)</h1>



 <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Event Date</th>
          <th>Description</th>
          <th>Added On</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.date %></td>
            <td><%= link_to event.description, event %></td>
            <td><%= event.created_at.strftime "%B %e, %Y" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>