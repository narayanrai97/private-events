<h1>User Profile</h1>
<div class="profile">
    <b>Name:</b>
    <%= @user.name %> 
</div><br>

<div>
  <%= link_to "Create an Event", new_event_path %>
</div>

<div class="created_events">
  <h3 id="created">Created Events (<%= @created_events.count %>)</h3>
  <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Event Date</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @created_events.each do |created_event| %>
          <tr>
            <td><%= created_event.date %></td>
            <td><%= link_to created_event.description, created_event %></td>
            <td><%= link_to "delete", created_event, method: :delete, 
                                      data: { confirm: "You sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div class="attended_events">
    <h3 id= "attendings">Attending Events (<%= @attended_events.count %>)</h3>
    
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Event Date</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @attended_events.each do |attended_event| %>
          <tr>
            <td><%= attended_event.date %></td>
            <td><%= link_to attended_event.description, attended_event %></td>
            <td><%= link_to "unattend", unattend_event_path(attended_event), method: :patch %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>


        



